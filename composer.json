{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "gigabait93/laravel-extensions",
  "description": "Modular extensions framework for Laravel",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "extensions",
    "modules",
    "plugin",
    "package"
  ],
  "authors": [
    {
      "name": "GIGABAIT93",
      "email": "xgigabaitx@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "illuminate/support": "^12.0",
    "illuminate/contracts": "^12.0",
    "illuminate/console": "^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^10.0",
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.87"
  },
  "autoload": {
    "psr-4": {
      "Gigabait93\\Extensions\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gigabait93\\Extensions\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Gigabait93\\Extensions\\Providers\\ExtensionsServiceProvider"
      ],
      "aliases": {
        "Extensions": "Gigabait93\\Extensions\\Facades\\Extensions"
      }
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "vendor/bin/phpunit",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=1G",
    "cs-fix": "vendor/bin/php-cs-fixer fix",
    "cs-check": "vendor/bin/php-cs-fixer fix --dry-run --diff"
  }
}
